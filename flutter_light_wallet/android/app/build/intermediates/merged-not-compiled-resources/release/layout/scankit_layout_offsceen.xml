<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"></LinearLayout>

    <View
        android:id="@+id/scan_touch_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:clickable="true"></View>
    <FrameLayout
        android:id="@+id/scan_off_corn"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <View
        android:background="@drawable/scankit_off_scan_lebal_unselect"
        android:layout_marginTop="1dp"
        android:layout_width="4dp"
        android:layout_height="4dp"></View>
    <View
        android:layout_marginLeft="10dp"
        android:background="@drawable/scankit_off_scan_lebal"
        android:layout_width="6dp"
        android:layout_height="6dp"></View>
    </FrameLayout>
    <ImageView
        android:id="@+id/scan_off_back_img_out"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:src="#00ffffff"
        />
</RelativeLayout>